{
  "sass" : {
    "concat" : [
      "node_modules/bootstrap/dist/css/bootstrap.css",
      "node_modules/font-awesome/css/font-awesome.css",
      "build/sass/_variables.scss",
      "build/sass/abstracts/*.scss",
      "build/sass/base/*.scss",
      "build/sass/components/*.scss",
      "build/sass/layout/*.scss",
      "build/sass/pages/**/*.scss"
    ]
  },
  "javascript" : {
    "concat" : {
      "vendor" : [
        "node_modules/jquery/dist/jquery.js",
        "node_modules/bootstrap/dist/js/bootstrap.js"
      ],
      "third_party": [
        "build/third_party/js/**/*.js"
      ],
      "custom": [
        "build/js/modules/**/*.js"
      ]
    },
    "dependencies": [
      ".resources/js/concat/vendor.js",
      ".resources/js/concat/third_party.js",
      ".resources/js/concat/custom.js"
    ]
  }
}
